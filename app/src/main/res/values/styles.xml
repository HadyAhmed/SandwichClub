<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/small_margin_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_margin_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/small_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/small_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/small_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/small_margin_horizontal</item>
    </style>

</resources>
